{
  "ports": {
    "backend": 8000,
    "frontend": {
      "web": 3000,
      "ios": "simulator"
    }
  },
  "services": {
    "backend": {
      "command": "cd backend && source venv/bin/activate && python3 -m uvicorn main:app --reload --port 8000",
      "health_check": "http://localhost:8000/health"
    },
    "frontend": {
      "web": {
        "command": "cd frontend && flutter run -d web-server --web-port 3000"
      },
      "ios": {
        "command": "cd frontend && flutter run -d \"iPhone 16 Plus\""
      }
    }
  }
}